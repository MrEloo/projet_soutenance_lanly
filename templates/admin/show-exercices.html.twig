{% extends "layout.html.twig" %}

{% block mypage %}

	<main>
		<div class="container p-4">
			<h1>Exercices</h1>
			<a href="index.php?route=administration">
				<button class='admin_retour_button'>RETOUR</button>
			</a>

			<!-- Bouton Ajouter un cours -->
			<a href="index.php?route=create_exercice" class="btn btn-success mb-3">Ajouter un cours</a>

			{% for exercice in exercices %}
				<div class="card mb-4">
					<div class="card-body">
						<h2 class="card-title">Title :
							{{ exercice.title }}
						</h2>
						<p class="card-text">Difficulty :
							{{ exercice.difficulty }}
						</p>
						<p class="card-text">
							Question :
							{{ exercice.question }}
						</p>
						<p class="card-text">
							correction_text :
							{{ exercice.correction_text }}
						</p>
						<p class="card-text">
							correction word :
							{{ exercice.correction }}
						</p>
						<p class="card-text">
							Category name :
							{{ exercice.globalCategory.name }}
						</p>
						<p class="card-text">
							Course ID :
							{{ exercice.course_id }}
						</p>

						<!-- Bouton Modifier -->
						<a href="index.php?route=update_exercice&ex_id={{exercice.id}}" class="btn btn-primary btn-sm mr-2">Modifier</a>

						<!-- Bouton Supprimer -->
						<a href="index.php?route=delete_exercice&ex_id={{exercice.id}}" class="btn btn-danger btn-sm">Supprimer</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}
