{% extends "layout.html.twig" %}

{% block title %}
	{{ translator.translate("admin_area") }}
{% endblock %}

{% block mypage %}
	<main class="admin">
		<div class="container p-4">
			<h1 class="admin_title">{{ translator.translate('Courses') }}</h1>
			<a href="index.php?route=administration">
				<button class='admin_retour_button'>{{ translator.translate('BACK') }}</button>
			</a>

			<!-- Bouton Ajouter un cours -->
			<a href="index.php?route=create_course" class="btn btn-success mb-3">{{ translator.translate('Add_a_course') }}</a>

			{% for course in courses %}
				<div class="card mb-4">
					<div class="card-body">
						<P class="card-title">
							<strong>{{ translator.translate('Title') }}
								:</strong>
							{{ course.title }}</P>
						<p class="card-text">{{ translator.translate('Description') }}
							:
							{{ course.description }}</p>
						<p class="card-text">
							<strong>{{ translator.translate('Category_name') }}
								:</strong>
							{{ course.globalCategory.name }}</p>

						<div class="button_admin_crud">
							<a href="index.php?route=update_course&course_id={{course.id}}" class="btn btn-primary btn-sm mr-2">{{ translator.translate('Edit') }}</a>
							<a href="index.php?route=delete_course&course_id={{course.id}}" class="btn btn-danger btn-sm">{{ translator.translate('DELETE') }}</a>
						</div>

					</div>
				</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}
