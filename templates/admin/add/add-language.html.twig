{% extends "layout.html.twig" %}

{% block title %}
	{{ translator.translate("admin_area") }}
{% endblock %}

{% block main %}
	<main>
		<form class='form_admin' action="index.php?route=add_language" method="post">
			<div class="form-group">
				<label for="language_name">{{ translator.translate("language_name") }}
					:</label>
				<input type="text" class="form-control" id="language_name" name="language_name" required>
			</div>

			<div class="form-group">
				<label for="flag_url">{{ translator.translate("flag_url") }}
					:</label>
				<input type="text" class="form-control" id="flag_url" name="flag_url" required>
			</div>

			<button type="submit" class="btn btn-primary">{{ translator.translate("add") }}</button>
		</form>
	</main>
{% endblock %}
