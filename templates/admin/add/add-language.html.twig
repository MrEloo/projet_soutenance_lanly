{% extends "layout.html.twig" %}

{% block main %}
	<main>
		<form class='form_admin' action="index.php?route=add_language" method="post">
			<div class="form-group">
				<label for="language_name">Nom de la langue :</label>
				<input type="text" class="form-control" id="language_name" name="language_name" required>
			</div>

			<div class="form-group">
				<label for="flag_url">URL du drapeau :</label>
				<input type="text" class="form-control" id="flag_url" name="flag_url" required>
			</div>

			<button type="submit" class="btn btn-primary">Ajouter</button>
		</form>
	</main>
{% endblock %}
