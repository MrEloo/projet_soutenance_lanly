{% extends "layout.html.twig" %}

{% block title %}
	{{ translator.translate("admin_area") }}
{% endblock %}

{% block mypage %}
	<main class="admin">
		<div class="container p-4">
			<h1 class="admin_title">{{ translator.translate('Courses') }}</h1>
			<a href="index.php?route=administration">
				<button class='admin_retour_button'>{{ translator.translate('BACK') }}</button>
			</a>

			<!-- Bouton Ajouter un cours -->
			<a href="index.php?route=create_language" class="btn btn-success mb-3">{{ translator.translate('Add_a_language') }}</a>

			{% for language in languages %}
				<div class="card mb-4">
					<div class="card-body">
						<h2 class="card-title">
							<strong>{{ translator.translate('NAME') }}
								:</strong>
							{{ language.name }}</h2>
						<img class="admin_image" src="{{ language.drapeau }}" alt="">

						<div class="button_admin_crud">
							<a href="index.php?route=delete_language&lan_id={{language.id}}" class="btn btn-danger btn-sm">{{ translator.translate('DELETE') }}</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}
