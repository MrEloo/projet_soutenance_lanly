{% extends "layout.html.twig" %}

{% block main %}
	<main>
		<section class="title_about_section_mobile">
			<h2>{{ translator.translate("contact_title") }}</h2>
		</section>
		<section class="contact_section_mobile">
			<div class="container">
				<h2>{{ translator.translate("send_email_title") }}</h2>
				<form action="submit_contact_form.php" method="POST">
					<div class="form-group">
						<label for="name">{{ translator.translate("name_label") }}:</label>
						<input type="text" id="name" name="name" required>
					</div>
					<div class="form-group">
						<label for="email">{{ translator.translate("email_label") }}:</label>
						<input type="email" id="email" name="email" required>
					</div>
					<div class="form-group">
						<label for="message">{{ translator.translate("message_label") }}:</label>
						<textarea id="message" name="message" required></textarea>
					</div>
					<div class="form-group">
						<button type="submit">{{ translator.translate("send_button") }}</button>
					</div>
				</form>
			</div>
		</section>
	</main>
{% endblock %}
